<% if( !user ) { %> 
  <%- include('./partials/header') %> 
  <% } else { %> 
  <%- include('./partials/header-logado') %> 
  <% } %>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/keen-slider@5.4.0/keen-slider.min.css"/>
<link rel="stylesheet" href="./css/perfilUsuario.css">
    
  <main>
    <div class="container">
      <div class class="header-container">
        <section class="imagem" >
          <img src="/images/faixa_perfil_usuario.png" alt="faixa_perfil_usuario" class="faixa_perfil_usuario">
          <article class="usuario">
            <img src="/post/<%=usuario.imagem %>" alt="upload_imagem" class="foto"> 
            <h1> <%= user.nome %></h1>
          </article>
        </section>
      </div>
      <div class="main-container">
        <section class="pontuacao">
          <div class="card">
            <div class="content">
              <img class="small-logo" src="./images/recicling-img.png" alt="recicling-card">
              <h3>Reciclagem</h3>
              <h2>
                <% if( usuario.pontuacao <=0 ) { %> 
                  <%= "0" %> 
                <% } else { %> 
                  <%= usuario.pontuacao%>
                <% } %>
                <span>pts</span>
              </h2>
            </div>
          </div>
    
          <div class="historico">
             <a href="/perfilUsuario/historico"><h2> Histórico de Reciclagem </h2></a>
          </div>
          <!-- ------------------- versão mobile-----------------------------  -->
          <div class="historico-mobile">
            <h2> Histórico de Reciclagem </h2>
          </div>
        </section>
        <span class="parceiro">Troque já seus pontos em um de nossos parceiros</span>
          
        <section class="parceiros">
          <article id="my-keen-slider" class="keen-slider">
            
            <% parceiros.forEach(parceiro => { %>
              <div class="keen-slider__slide number-slide">
                <img data-toggle= "modal" data-target="#siteModal" class="img-parceiro" src="/post/<%=parceiro.imagem %>" alt="...">
                
              </div>
                <% }) %> 
            
          </article>
        </section>
      </div>
    </div>
  </main>



  


  
  <!-- Modal -->
<div class="modal fade" id="siteModal" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered " role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title font-weight-bold" id="exampleModalLongTitle"><%= vouchers.codigo%></h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= vouchers.descricao%>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
        <button type="button" class="btn btn-primary">Realizar Troca</button>
      </div>
    </div>
  </div>
</div>




  
  
  <script src="https://cdn.jsdelivr.net/npm/keen-slider@5.4.0/keen-slider.min.js"></script>
  <script src="./javascripts/perfilUsuarioCarrosel.js"></script> 

   
  <%- include('./partials/footer') %>